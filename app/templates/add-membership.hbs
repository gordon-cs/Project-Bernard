<div class="container">
    <h3 class="row">
        Adding - {{model.activityCode}}
    </h3>
    <div class="row">
        {{#power-select
            placeholder="Select Participation"
            selected=role
            searchField="ParticipationDescription"
            options=model.roles
            onchange=(action "setRole")
            as |role|
        }}
            {{role.ParticipationDescription}}
        {{/power-select}}
    </div>
    <div class="row">
        {{input value=comments class="form-control" placeholder="Comment (optional)"}}
    </div>
    <div class="row">
        <button class="form-control btn btn-blue" {{action 'post'}}>Add</button>
    </div>
</div>
