<link rel="stylesheet" href="assets/specific-activity.css">

<div class="container main-container">
    <div class="row">
        <div class="col-sm-6 col-left">
            <div class="row">
                <h2 class = "activity-name">{{model.activity.ActivityDescription}}</h2>
                <img class = "activity-picture"
                    src="http://whoopdirt.com/wp-content/uploads/2016/06/Gordon_Logo-294_bigger.gif">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="row">
                {{#if model.leader}}
                    {{#link-to 'add-membership' model.session.SessionCode model.activity.ActivityCode}}
                        <button type="button" class="btn btn-blue form-control col-sm-6" {{action 'toggleFollow'}}>Add Member</button>
                    {{/link-to}}
                {{else}}
                    {{#if model.following}}
                        <button type="button" class="btn btn-blue form-control col-sm-6" {{action 'toggleFollow'}}>Unfollow</button>
                    {{else}}
                        <button type="button" class="btn btn-blue form-control col-sm-6" {{action 'toggleFollow'}}>Follow</button>
                    {{/if}}
                    {{#link-to 'add-membership' model.session.SessionCode model.activity.ActivityCode}}
                        <button type="button" class="btn btn-blue form-control col-sm-6">Request Membership</button>
                    {{/link-to}}
                {{/if}}
            </div>
            <div class="activity-info row">
                <div class="row">
                    <div class="col-sm-12">
                        <p class="activity-info-item">Leaders:</p>
                            {{#each model.leaders as |leader|}}
                                <p class="activity-info-item-data">
                                    {{leader.FirstName}} {{leader.LastName}} (<a href="https://en.wikipedia.org/wiki/Potato">E.Mail@gordon.edu</a>)
                                </p>
                            {{/each}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <p class="activity-info-item">Description: {{model.activity.ActivityCode}}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <p class="activity-info-item">Session: {{model.session.SessionDescription}}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <p class="activity-info-item">Advisor: ...</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <p class="activity-info-item">Times: ...</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <p class="activity-info-item">Tags: ...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h2>Current Activity Roster</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Student ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Role</th>
                        <th>Leader/Advisor Control</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each model.memberships as |mems|}}
                    <tr>
                        <td> {{mems.IDNumber}} </td>
                        <td> {{mems.FirstName}} </td>
                        <td> {{mems.LastName}} </td>
                        <td> {{mems.ParticipationDescription}} </td>
                        <td>
                            <button {{action 'removePerson'}} class="btn btn-blue roster-btn remove-btn">Remove</button> <button {{action 'editPerson'}} class="btn btn-blue roster-btn edit-btn">Edit</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
