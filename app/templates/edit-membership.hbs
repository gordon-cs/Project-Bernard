<div id="form-box" class="whitebox row">
    <h1>Edit {{model.membership.ActivityDescription}}</h1>
    <h1>{{model.membership.FirstName}} {{model.membership.LastName}}: {{model.membership.ParticipationDescription}}</h1>
    <form {{action "update" on="submit"}}>
        <label for="participation">Participation</label>
        {{#power-select
            placeholder="Please Select"
            selected=role
            searchField="ParticipationDescription"
            options=model.roles
            onchange=(action "setRole")
            as |role|
        }}
            {{role.ParticipationDescription}}
        {{/power-select}}
        <label for="comment">Comment (optional)</label>
        {{input value=comments class="form-control"}}
        <button class="btn button-navy form-button" {{action 'update'}}>Edit</button>
        {{#if errorMessage}}
            <p id="error-message"><span class="glyphicon glyphicon-exclamation-sign"></span> {{errorMessage}}</p>
        {{/if}}
    </form>
</div>
