<div class="container main-container">
    <div class="row" id="download-div">
        <button id="download-button" class="btn button-cyan" onclick={{action "getPDF"}}>
            Download Transcript
        </button>
    </div>
    <h3><strong>{{model.title}}</strong></h3>
    {{#if model.hasLeaderships}}
    <div class="table-responsive">
        <h4><strong>Leadership positions</strong></h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Session</th>
                    <th>Activity</th>
                    <th>Participation</th>
                </tr>
            </thead>
            <tbody>
                {{#each model.leaderships as |leadership|}}
                <tr>
                    <td>{{leadership.SessionDescription}}</td>
                    <td>{{leadership.ActivityDescription}}</td>
                    <td>{{leadership.ParticipationDescription}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{/if}}
    {{#if model.hasMemberships}}
    <div class="table-responsive">
        <h4><strong>Memberships</strong></h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Session</th>
                    <th>Activity</th>
                </tr>
            </thead>
            <tbody>
                {{#each model.memberships as |membership|}}
                <tr>
                    <td>{{membership.SessionDescription}}</td>
                    <td>{{membership.ActivityDescription}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{/if}}
    {{#if model.noActivity}}
    <h4>There is no activity to report!</h4>
    {{/if}}
    <!-- <div class="row reset-padding">
        <iframe class="col-xs-12" id="transcipt-view" src={{model.url}}></iframe>
    </div> -->
</div>
