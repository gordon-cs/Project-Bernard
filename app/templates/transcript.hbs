<div class="container main-container">
    <div class="row" id="download-div">
        <button id="download-button" class="btn button-cyan" onclick={{action "getPDF"}}>
            Download Transcript
        </button>
    </div>
    <div id="print">
        <h3><strong>{{model.title}}</strong></h3>

        <div class="table-responsive">

            <table class="table">
                <thead></thead>
                {{#each model.membershipsDictionary as |session|}}
                <thead class="session-description"><tr><th colspan="3"><h4><strong>{{session.SessionDescription}}</strong></h4></th></tr></thead>
                <thead>
                    <tr>
                        <!-- <th>Session</th> -->
                        <th>Activity</th>
                        <th>Participation</th>
                        <th>Total Semesters</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each session.Activities as |membership|}}
                    <tr>
                        <!-- <td>{{membership.SessionDescription}}</td> -->
                        <td>{{membership.ActivityDescription}}</td>
                        <td>{{membership.ParticipationDescription}}</td>
                        <td>{{membership.SemesterAcount}}</td>
                    </tr>
                    {{/each}}
                    <tr class="end">
                        <td colspan="3">
                        </td>
                    </tr>
                </tbody>
                {{/each}}
            </table>
        </div>
    </div>

