<div class="container events event-box">
  <div class="whitebox">
    <h4 class="event-p">
      You currently have <b>{{model.numEvents}}</b> Christian Life and Worship Credits
    </h4>
    <div class= "row">
<div class="input-group event-search col-xs-5 col-sm-4 col-md-3">
      {{input value=model.searchValue key-up=(action "filterEvents") class="form-control" placeholder="Search for..."}}
    </div>

      <div class="progress event-progress col-xs-4 col-xs-offset-1 col-sm-4 col-sm-offset-1  col-md-offset-2 col-md-4" style="height: 32px;">
        <div class= "progress-bar " role="progressbar" aria-valuenow="{{model.numEvents}}" aria-valuemin="0" aria-valuemax="30" style="width: {{model.eventsPercent}}%;"></div>
      </div>

      <button type="button" class="btn btn-primary col-sm-1 col-md-1 col-xs-4 col-xs-offset-4 col-sm-offset-1 col-md-offset-1" >All CL&W</button> 
    </div>
  </div>
  <div class="event-cyanbox cyanbox">
    <div id="category-bar" class="row">
      <h4 class="event-labels col-sm-3 col-md-3" onclick={{action "sortByName"}}>Event</h4>
      <h4 class="event-labels col-sm-4 col-md-4" onclick={{action "sortByLocation"}}>Location</h4>
      <h4 class="event-labels col-sm-2 col-md-2" onclick={{action "SortByDate"}}>Date</h4>
      <h4 class="event-labels col-sm-3 col-md-3" onclick={{action "SortByDate"}}>Time</h4>
    </div>
  </div>
  <div class="entry-rows">
    {{#each model.eventShown as |event|}}
    <div class="row event-row" style= "margin-left:0px; margin-right:0px" {{ action "toggleEventDetailsModal" event }}>
      <h4 class="col-md-3 col-sm-3 event-id"  onclick= {{action "toggleRequestSent"}} >{{event.CHEventID}}</h4>
      <h4 class="display-col col-md-4 col-sm-4 col-xs-hide">A.J. Chapel</h4>
      <h4 class="display-col col-md-2 col-sm-2 col-xs-hide">{{event.CHDate}}</h4>
      <h4 class="display-col col-md-3 col-sm-3 col-xs-hide">{{event.CHTime}}</h4>
    </div>
    {{/each}}
  </div>

</div>

<!-- Event Details Modal -->
<div id="toggleEventDetailsModal" class="modal event-modal" onclick={{action "cancelEventDetailsModal"}}>

  <!-- Modal Content -->
  <div class="modal-content event-modal-content">
      <h3 class="whitebox modal-header event-modal-header"> {{ displayEvent.CHEventID }} </h3>
    <div class="modal-body">
      <h4> A.J Chapel <br> {{ displayEvent.CHTime }} <br> {{ displayEvent.CHDate}} </h4>
    </div>
    <div class="modal-footer">
      <button class="btn button-lightgray cancel-modal form-button form-cancel-button">Cancel</button>
    </div>
  </div>

</div>
