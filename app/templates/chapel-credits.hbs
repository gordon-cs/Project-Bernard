<div class="container events event-box">
  <div class="whitebox">
    <h4 class="event-p">
      You currently have <b>{{model.numEvents}}</b> Christian Life and Worship Credits
    </h4>
    <div class="search-bar">
			<label for="search events">Search Events</label>
				{{input value=model.searchValue key-up=(action "filterEvents") class="form-control" }}
		</div>

    <div class="progress event-progress" style="height: 32px; margin-bottom: 0px; margin-top: 5px;">
      <div class= "progress-bar" role="progressbar" aria-valuenow="{{model.numEvents}}" aria-valuemin="0" aria-valuemax="30" style="width: {{model.eventsPercent}}%; height: 50px">
     </div>
    </div>

  </div>
  <h4 class="event-cyanbox cyanbox">
    <div id = "category-bar" class="row">
      <div class="event-labels col-xs-6 col-sm-5 col-md-6" onclick= {{action "sortByName"}}>Events Attended </div>
      <div class="event-labels col-xs-2 col-sm-3 col-md-2" onclick= {{action "sortByLocation"}}>Location</div>
      <div class="event-labels col-xs-2 col-sm-2 col-md-2" onclick= {{action "SortByDate"}}>Time</div>
      <div class="event-labels col-xs-2 col-sm-2 col-md-2" onclick= {{action "SortByDate"}}> Date</div>
    </div>
  </h4>
  <div class="entry-rows">
    {{#each model.eventShown as |event|}}
    <div class="row event-row" style= "margin-left:0px; margin-right:0px" {{ action "toggleEventDetailsModal" event }}>
      <h4 class="col-md-6 col-sm-5 event-id"  onclick= {{action "toggleRequestSent"}} >{{event.CHEventID}}</h4>
      <h4 class="display-col col-md-2 col-sm-3 col-xs-hide">A.J. Chapel</h4>
      <h4 class="display-col col-md-2 col-sm-2 col-xs-hide">{{event.CHTime}}</h4>
      <h4 class="display-col col-md-2 col-sm-2 col-xs-hide">{{event.CHDate}}</h4>
    </div>
    {{/each}}
  </div>

</div>

<!-- Event Details Modal -->
<div id="toggleEventDetailsModal" class="modal event-modal" onclick={{action "cancelEventDetailsModal"}}>

  <!-- Modal Content -->
  <div class="modal-content event-modal-content">
      <h3 class="whitebox modal-header event-modal-header"> {{ displayEvent.CHEventID }} </h3>
    <div class="modal-body">
      <h4> A.J Chapel <br> {{ displayEvent.CHTime }} <br> {{ displayEvent.CHDate}} </h4>
    </div>
    <div class="modal-footer">
      <button class="btn button-lightgray cancel-modal form-button form-cancel-button">Cancel</button>
    </div>
  </div>

</div>
