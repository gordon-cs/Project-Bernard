<div class="col-sm-12 header">
  <header class="container">
    <nav class="vertical-center graybox app-title-container">


      <div class="user-info col-sm-3">
        {{#if session.isAuthenticated}}
          <div class="user-info-buttons dropdown">
            <h6 class="dropdown-toggle" id=id="dropdownMenu1" aria-haspopup="true" aria-expanded="true">
                        {{session.data.authenticated.token_data.name}}</h6>
            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown1menu1">
              <li>
                {{#link-to "help"}} Help{{/link-to}}
              </li>
              <li>
                {{#link-to "profile"}}Profile
                  {{#if requestsRecieved}}
                    <span class="notification">
                                    {{requestsRecieved.length}}
                                </span>
                  {{/if}}
                {{/link-to}}
              </li>
              <li>
                {{#link-to "transcript"}}Transcript{{/link-to}}
              </li>
              {{#if isSomeAdmin}}
                <li>
                  {{#link-to "activities-status"}} Activities' Status{{/link-to}}
                </li>
              {{/if}}
              <li role="separator" class="divider"></li>
              <li><a href="#" {{action "logout"}}>Logout</a></li>
            </ul>
          </div>
          {{#if requestsRecieved}}
            <span class="notification">
                            {{requestsRecieved.length}}
                        </span>
          {{/if}}
        {{/if}}
      </div>
      {{#if session.isAuthenticated}}
        {{#link-to "index"}}
          <div id="logo-box-horizontal">
            <img src="images/gordon-logo-horizontal.svg" alt="Gordon College logo" width="150" height="38" />
          </div>
        {{/link-to}}
      {{else}}
        {{#link-to "index"}}
          <div id="logo-box">
            <img src="images/gordon-logo-vertical-white.svg" alt="Gordon College logo">
          </div>
        {{/link-to}}
      {{/if}}
    </nav>
  </header>
  {{#if session.isAuthenticated}}
    <nav class=" {{if showMenu 'graybox showMenu' 'lightgraybox'}} navbar navbar-toggleable-md navbar-light bg-faded">
      <div class="row">
        {{#link-to "index"}}
          <img src="images/gordon-logo-mobile.png" id="logo-mobile" class="{{if session.isAuthenticated '' 'logo-mobile-center'}}" />
        {{/link-to}}

        {{#if session.isAuthenticated}}
          <div class="mobile-menu-icon">
            <button data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <img src="images/list.svg" id="icon-menu">
                  </button>
          </div>
        {{/if}}
      </div>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="primary-menu" id="primary-menu">
          <li class="user-info-mobile">
            {{session.data.authenticated.token_data.name}}
          </li>
          <li>
            <button type="button">
                    {{#link-to "index" class="button uppercase"}}
                        My Home
                    {{/link-to}}
                  </button>
          </li>
          <li>
            <button type="button">
                    {{#link-to "all-activities" class="button uppercase"}}
                        Activities
                    {{/link-to}}
                  </button>
          </li>

          <li class="nav-item dropdown">
            <button class="nav-link" type="button">
                    {{#link-to "all-events" class="uppercase"}} Events {{/link-to}}
                  </button>
            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
              <div class="dropdown-item">
                {{#link-to "chapel-credits" class="primary-menu" }}
                  <center>Chapel </center>
                {{/link-to}}
              </div>
              <div class="dropdown-item">
                {{#link-to "all-events" class="uppercase" }}
                  <center>All Events </center>
                {{/link-to}}
              </div>
            </ul>
          </li>

          <li>
            <button type="button">
                  {{#link-to "about" class="button uppercase"}}
                        About
                  {{/link-to}}
                </button>
          </li>
          <li class="user-info-mobile">
            {{#link-to "help"}} Help{{/link-to}}
          </li>
          <li class="user-info-mobile">
            {{#link-to "profile" class="button uppercase" }}
              Profile
            {{/link-to}}
            {{#if requestsRecieved}}
              <span class="notification">
                            {{requestsRecieved.length}}
                        </span>
            {{/if}}
          </li>
          {{#if isSomeAdmin}}
            <li class="user-info-mobile">
              {{#link-to "activities-status"}} Activities' Status{{/link-to}}
            </li>
          {{/if}}
          <li class="logout-mobile">
            <a {{action "logout"}} class="button uppercase">Logout</a>
          </li>
        </ul>
      </div>
    </nav>
  {{/if}}
</div>

<div id="main-page-container" class="col-sm-12">
  {{outlet}}
</div>
