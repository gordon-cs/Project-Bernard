<div class="col-sm-12 header">
  <nav class="container vertical-center graybox app-title-container">
      <div class="user-info col-sm-3">
        {{#if session.isAuthenticated}}
          <div class="user-info-buttons dropdown">
            <h4 class="dropdown-toggle" id=id="dropdownMenu1" aria-haspopup="true" aria-expanded="true">
                        {{session.data.authenticated.token_data.name}}
            </h4>
            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown1menu1">
              <li>
                {{#link-to "help"}} Help{{/link-to}}
              </li>
              <li>
                {{#link-to "profile"}}Profile
                  {{#if requestsRecieved}}
                    <span class="notification">
                                    {{requestsRecieved.length}}
                                </span>
                  {{/if}}
                {{/link-to}}
              </li>
              <li>
                {{#link-to "transcript"}}Transcript{{/link-to}}
              </li>
              {{#if isSomeAdmin}}
                <li>
                  {{#link-to "activities-status"}} Activities' Status{{/link-to}}
                </li>
              {{/if}}
              <li role="separator" class="divider"></li>
              <li><a href="#" {{action "logout"}}>Logout</a></li>
            </ul>
          </div>
          {{#if requestsRecieved}}
            <span class="notification">
                            {{requestsRecieved.length}}
                        </span>
          {{/if}}
        {{/if}}
      </div>
      {{#if session.isAuthenticated}}
        {{#link-to "index"}}
          <div id="logo-box-horizontal">
            <img src="images/gordon-logo-horizontal.svg" alt="Gordon College logo" />
          </div>
        {{/link-to}}
      {{else}}
        {{#link-to "index"}}
          <div id="logo-box">
            <img src="images/gordon-logo-vertical-white.svg" alt="Gordon College logo">
          </div>
        {{/link-to}}
      {{/if}}
    </nav>
</div>






