<div class="col-sm-12 header">
    <header class="container">
        <div class="app-title-container row">
            {{#link-to "index"}}
                <img src="images/gordon-logo-mobile.png" id="logo-mobile" class="{{if session.isAuthenticated '' 'logo-mobile-center'}}"/>
            {{/link-to}}
            {{#if session.isAuthenticated}}
                <div class="mobile-menu-icon">
                    <button {{action 'toggleMenu'}}>
                      <img src="images/list.svg" id="icon-menu">
                    </button>
                </div>
            {{/if}}
            <div class="col-sm-3"></div>
            <h1 class="app-title col-sm-6">Student Clubs &amp; Organizations</h1>
            <div class="user-info col-sm-6">
                {{#if session.isAuthenticated}}
                    <div class="user-info-buttons dropdown">
                        <h6 class="dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="true">
                        {{session.data.authenticated.token_data.name}}
                        <span class="glyphicon glyphicon-chevron-down"></span></h6>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown1menu1">
                          <li>{{#link-to "help"}} Help{{/link-to}} </li>
                          <li>{{#link-to "profile"}}Profile
                            {{#if requestsRecieved}}
                                <span class="notification">
                                    {{requestsRecieved.length}}
                                </span>
                            {{/if}}
                            {{/link-to}}</li>
                          {{#if isSomeAdmin}}
                          <li>{{#link-to "activities-status"}} Activities' Status{{/link-to}} </li>
                          {{/if}}
                          <li role="separator" class="divider"></li>
                          <li><a href="#" {{action "logout"}}>Logout</a></li>
                        </ul>
                    </div>
                    {{#if requestsRecieved}}
                        <span class="notification">
                            {{requestsRecieved.length}}
                        </span>
                    {{/if}}
                {{/if}}
            </div>
            {{#if session.isAuthenticated}}
                {{#link-to "index"}}
                    <div id="logo-box-horizontal">
                        <img src="images/gordon-logo-horizontal.svg" alt="Gordon College logo"  width="150" height="38" />
                    </div>
                {{/link-to}}
            {{else}}
                {{#link-to "index"}}
                    <div id="logo-box">
                        <img src="images/gordon-logo-vertical-white.svg" alt="Gordon College logo">
                    </div>
                {{/link-to}}
            {{/if}}
        </div>
    </header>
    {{#if session.isAuthenticated}}
        <div class="row {{if showMenu 'graybox showMenu' 'lightgraybox'}} primary-menu-container">
            <ul id="primary-menu">
                <li class="user-info-mobile">
                    {{session.data.authenticated.token_data.name}}
                </li>
                <li>
                  <span {{action "closeMenu"}}>
                    {{#link-to "index" class="button uppercase"}}
                        My Home
                    {{/link-to}}
                  </span>
                </li>
                <li>
                  <span {{action "closeMenu"}}>
                    {{#link-to "all-activities" class="button uppercase"}}
                        All Activities
                    {{/link-to}}
                  </span>
                </li>
                <li>
                  <span {{action "closeMenu"}}>
                    {{#link-to "transcript" class="button uppercase"}}
                        Transcript
                    {{/link-to}}
                  </span>
                </li>
                <li>
                  <span {{action "closeMenu"}}>
                    {{#link-to "about" class="button uppercase"}}
                          About
                    {{/link-to}}
                  </span>
                </li {{action "closeMenu"}}>
                <li class="user-info-mobile" >
                  <span {{action "closeMenu"}}>
                    {{#link-to "help"}} Help{{/link-to}}
                  </span>
                </li>
                <li class="user-info-mobile">
                  <span {{action "closeMenu"}}>
                    {{#link-to "profile" class="button uppercase"}}
                        Profile
                    {{/link-to}}
                    {{#if requestsRecieved}}
                        <span class="notification">
                            {{requestsRecieved.length}}
                        </span>
                    {{/if}}
                  </span>
                </li>
                {{#if isSomeAdmin}}
                <li class="user-info-mobile">
                  <span {{action "closeMenu"}}>
                    {{#link-to "activities-status"}}
                    Activities' Status
                    {{/link-to}}
                  </span>
                </li>
                {{/if}}
                <li class="logout-mobile">
                  <span {{action "closeMenu"}}>
                    <a {{action "logout"}} href="#" class="button uppercase">Logout</a>
                  </span>
                </li>
            </ul>
        </div>
    {{/if}}
</div>

<div id="main-page-container" class="col-sm-12">
    {{outlet}}
</div>
