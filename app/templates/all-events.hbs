    <div class = " no-padding hidden-xs col-sm-8 col-md-7">

      <div>
        <button class="btn btn-secondary filterBtn button-padding " type="button" aria-haspopup="true" aria-expanded="false" {{action "checkForChaple"}}>
          {{option1}}
        </button>
      </div>

      <div>
        <button class="btn btn-secondary filterBtn button-padding " type="button" aria-haspopup="true" aria-expanded="false"{{action "showfutureEvents"}}>
