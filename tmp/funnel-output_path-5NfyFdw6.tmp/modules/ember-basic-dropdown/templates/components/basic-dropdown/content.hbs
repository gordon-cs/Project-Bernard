{{#if dropdown.isOpen}}
  {{#basic-dropdown/wormhole to=to renderInPlace=renderInPlace didInsert=(action "didOpen") willRemove=(action "willClose")}}
    <div
      id={{dropdownId}}
      class="ember-basic-dropdown-content {{class}} {{if renderInPlace 'ember-basic-dropdown-content--in-place'}} {{if hPosition (concat 'ember-basic-dropdown-content--' hPosition)}} {{if vPosition (concat 'ember-basic-dropdown-content--' vPosition)}} {{animationClass}}"
      dir={{dir}}>
      {{yield}}
    </div>
  {{/basic-dropdown/wormhole}}
{{/if}}