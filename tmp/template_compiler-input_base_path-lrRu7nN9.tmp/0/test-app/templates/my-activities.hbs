<link rel="stylesheet" type="text/css" href="assets/all-activities.css">

<div class="container main-container">
	<div class="row">
		<div class="col-sm-6">
			<h2 class="section-title">Current Experience:</h2>
		</div>
	</div>
	<div class="activity-list">
		{{#each model as |mem|}}
			{{#link-to 'specific-activity' mem.SessionCode mem.ActivityCode class="well activity-list-item col-sm-5"}}
				<img class="img" src="http://whoopdirt.com/wp-content/uploads/2016/06/Gordon_Logo-294_bigger.gif">
				<p>Activity: {{mem.ActivityCode}} </p>
				<p>Membership Role: {{mem.Participation}}</p> 
				<p>Start Date: {{mem.StartDate}}</p>
				<p>End Date: {{mem.EndDate}}</p>
			{{/link-to}}
		{{/each}}
	</div>
	<div class="row">
		<div class="col-sm-12">
			<h2 class="section-title">Past Experience:</h2>
		</div>
	</div>
</div>